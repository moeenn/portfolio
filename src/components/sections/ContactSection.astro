---
import PhoneIcon from "../icons/PhoneIcon.astro";
import AtSymbolIcon from "../icons/AtSymbolIcon.astro";
import ChatIcon from "../icons/ChatIcon.astro";
---

<div class="py-14 content-auto" id="contact">
  <div class="flex">
    <div class="flex flex-col lg:flex-row lg:mx-auto">
      <h4
        class="text-4xl lg:text-6xl text-gray-900 lg:p-4 rounded mb-4 lg:mb-0 lg:text-right lg:mr-2"
      >
        Let's start a <br class="hidden lg:block" />project together
      </h4>

      <div
        class="flex flex-col my-auto lg:border-l lg:border-dashed lg:border-gray-900 lg:pl-6"
      >
        <div
          class="flex-1 flex space-x-3 hover:text-gray-900 text-black hover:underline underline-offset-4 py-2 transition-all"
        >
          <PhoneIcon className="h-5 w-5 text-gray-900 my-auto" />
          <a href="tel:+92 336-4220030" class="my-auto">+92 336-4220030</a>
        </div>

        <div
          class="flex-1 flex space-x-3 hover:text-gray-900 py-2 hover:underline underline-offset-4 transition-all"
        >
          <ChatIcon className="h-5 w-5 text-gray-900 my-auto" />
          <a class="my-auto" href=" https://wa.me/923364220030" target="_blank">
            +92 336-4220030 (WhatsApp)
          </a>
        </div>

        <div
          class="flex-1 flex space-x-3 hover:text-gray-900 py-2 hover:underline underline-offset-4 transition-all"
        >
          <AtSymbolIcon className="h-5 w-5 text-gray-900 my-auto" />
          <a class="my-auto" href="mailto:moeen.v8@gmail.com">
            moeen.v8@gmail.com
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
