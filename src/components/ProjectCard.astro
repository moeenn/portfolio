---
import { type Project } from "../content";

type Props = {
	project: Project;
};

const props = Astro.props;
---

<a
	href={"/projects/" + props.project.id}
	class="bg-gray-100 hover:-transtone-y-2 transition-all hover:drop-shadow p-6 border-l-2 border-gray-900 rounded"
>
	<div class="flex space-x-3">
		<props.project.icon className="h-6 w-6 mb-auto" />
		<h4 class="flex-1 text-xl mb-2">{props.project.title}</h4>
	</div>
	<p class="text-sm leading-relaxed mb-5">{props.project.desc}</p>

	<div class="flex flex-wrap">
		{
			props.project.tech.map((tech) => (
				<span class="text-xs px-2 py-1 bg-gray-200 rounded mr-2 mb-2">
					{tech.name}
				</span>
			))
		}
	</div>
</a>
