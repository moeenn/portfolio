---
import BaseLayout from "../layouts/BaseLayout.astro";
import { BlogPosts } from "../content/blogs";
import Container from "../components/Container.astro";
---

<BaseLayout title="Muhammad Moeen - Blogs">
    <Container>
        <section class="py-14">
            <div class="grid grid-cols-2 gap-6">
                {
                    BlogPosts.map((p) => (
                        <a
                            href={`/blogs/${p.id}`}
                            class="w-full p-4 bg-slate-100 rounded hover:bg-slate-200"
                        >
                            <div>
                                <h4 class="text-slate-900 text-lg font-semibold">
                                    {p.title}
                                </h4>
                                <p class="text-slate-600">{p.desc}</p>
                                <p class="text-sm text-slate-600">{p.date}</p>
                                {p.tags.map((t) => (
                                    <span class="bg-slate-200 rounded px-3 py-1 text-sm">
                                        {t.name}
                                    </span>
                                ))}
                            </div>
                        </a>
                    ))
                }
            </div>
        </section>
    </Container>
</BaseLayout>
