---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Container from "../../components/Container.astro";
import { getCollection } from "astro:content";
import type { GetStaticPaths } from "astro";
import { render } from "astro:content";
import type { CollectionEntry } from "astro:content";
import { JSDOM } from "jsdom";

type Heading = {
	id: string;
	text: string;
	level: number;
};

type Props = {
	id: string;
	post: CollectionEntry<"blog">;
	headings: Heading[];
};
const props = Astro.props;

export const getStaticPaths = (async () => {
	const extractHeadings = (html: string | undefined) => {
		if (!html) return [];

		const dom = new JSDOM(html);
		const doc = dom.window.document;
		const headings = doc.querySelectorAll("h1, h2, h3, h4, h5, h6");
		return [...headings].map((h) => ({
			id: h.id,
			text: (h as HTMLElement).textContent,
			level: parseInt((h as HTMLElement).tagName.replace("H", "")),
		}));
	};

	const posts = await getCollection("blog");
	return posts.map((p) => ({
		params: { id: p.id },
		props: {
			post: p,
			headings: extractHeadings(p.rendered?.html),
		},
	}));
}) satisfies GetStaticPaths;

const { Content } = await render(props.post);
---

<BaseLayout
	title={props.post.data.title}
	meta={{ url: "/blogs/" + props.id, description: props.post.data.desc }}
>
	<Container>
		<div class="pt-8 pb-14">
			<h2 class="text-2xl space-x-2 mb-2">
				<span class="font-normal text-gray-500">#</span>
				<span class="text-gray-900">{props.post.data.title}</span>
			</h2>

			<div class="flex flex-wrap gap-2 mb-6">
				{
					props.post.data.tags.map((t) => (
						<span class="text-xs bg-gray-200 rounded px-2 py-1">
							{t}
						</span>
					))
				}
			</div>

			<div class="grid grid-cols-4">
				<div class="xl:order-last xl:pl-6 h-full">
					<div class="xl:sticky xl:top-4">
						<p class="font-medium text-gray-700 mb-2">
							Table of content
						</p>

						{
							props.headings.map((h) => (
								<a
									data-level={h.level}
									href={`#${h.id}`}
									style={`margin-left: ${(h.level - 2) * 0.75}rem`}
									class="block text-sm pb-1 hover:underline underline-offset-4"
								>
									{h.text}
								</a>
							))
						}
					</div>
				</div>

				<div
					class="xl:order-first xl:col-span-3 prose-xl prose-p:leading-relaxed prose-p:text-base prose-h1:text-3xl prose-h2:text-2xl prose-h3:text-xl prose-h4:text-lg prose-h4:text-md prose-headings:mb-2 prose-headings:mt-12 prose-headings:scroll-mt-4 prose-pre:mt-2 prose-pre:text-base prose-pre:leading-6 prose-ul:list-disc prose-table:border prose-table:border-gray-300 prose-table:w-full prose-table:mb-10 prose-tr:border prose-tr:border-gray-300"
				>
					<Content />
				</div>
			</div>
		</div>
	</Container>
</BaseLayout>
